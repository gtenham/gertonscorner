<!-- 
rem Oracle table creation script
create table users(
id                varchar2(100) not null,
username          varchar2(1000) not null,
password          varchar2(1000) not null,
active            number(1) default 1 not null,
service_url	 	  varchar2(2000)
);

 -->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.wordpress.gertonscorner.security.dao.IUserDao">
	<select id="selectUserById" parameterType="string" resultType="User">
    	select id, username, password, active, service_url from users where id = #{id}
    </select>
    <!-- 
    <insert id="insertUser" parameterType="Todo">
    	insert into users(id, username, password, active, service_url) 
        values (#{id},#{username},#{password}, #{active}, #{service_url})
    </insert>
    
    <delete id="deleteUser" parameterType="string">
    	delete from users where id = #{id}
    </delete>
    
    <update id="updateUser" parameterType="User">
    	update users
    	set service_url = #{service_url}
    	,   active = #{active}
    	,   password = #{password}
    	,   username = #{username}
    	where id = #{id}
    </update>
     -->
</mapper>
