<!-- 
-- Oracle table creation script
create table todos(
id          varchar2(20) not null,
done        number(1) default 0 not null,
description varchar2(200)
);

 -->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
    
	<mapper namespace="com.wordpress.gertonscorner.todo.dao.ITodoDao">
	<select id="getTodos" resultType="Todo">
    	select id, done, description from todos
    </select>
    
    <select id="selectTodo" parameterType="string" resultType="Todo">
    	select id, done, description from todos where id = #{id}
    </select>
    
    <insert id="insertTodo" parameterType="Todo">
    	insert into todos(id,description) 
        values (#{id}, #{description})
    </insert>
    
    <delete id="deleteTodo" parameterType="string">
    	delete from todos where id = #{id}
    </delete>
    
    <update id="updateTodo" parameterType="Todo">
    	update todos
    	set description = #{description}
    	,   done = #{done}
    	where id = #{id}
    </update>
</mapper>
